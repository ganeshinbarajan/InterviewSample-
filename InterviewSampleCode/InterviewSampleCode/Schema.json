{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "JSON Schema for Tree Structure",
  "type": "object",
  "properties": {
    "Id": {
      "description": "Node ID",
      "type": "integer",
      "required": [ "true" ]
    },
    "Label": {
      "description": "Label Name",
      "type": "string"
    },
    "ChildNodes": {
      "description": "List of Child Nodes",
      "type": "array",
      "items": {
        "$ref": "#"
      }
    }
  },
  "required": [ "Id" ]
}
